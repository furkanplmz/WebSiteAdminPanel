<section id="main">
    <h2>Hizmetler</h2>
    <a class="btn btn-lg btn-outline-primary" href="/Hizmet/Create/">Yeni Ekle</a>
    <table id="hizmetTable" class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>#</th>
                <th>Baslik</th>
                <th>Aciklama</th>
                <th>ResimUrl</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.HizmetId</td>
                    <td>@item.Baslik</td>
                    <td>@item.Aciklama</td>
                    <td><img width="100" height="100" src="@item.ResimUrl" /></td>
                    <td>
                        <button class="btn btn-primary" onclick="duzenleHizmet(@item.HizmetId)">Düzenle</button>
                        <button class="btn btn-danger" onclick="silHizmet(@item.HizmetId)">Sil</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</section>

@section scripts {
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>

    <script>
        function duzenleHizmet(hizmetId) {
            
            $.ajax({
                url: '/Hizmet/Edit/' + hizmetId,
                type: 'GET',
                success: function () {
                    
                    window.location.href = '/Hizmet/Edit/' + hizmetId;
                },
                error: function () {
                    console.log('AJAX isteği başarısız oldu.');
                }
            });
        }

        function silHizmet(hizmetId) {
            
            $.ajax({
                url: '/Hizmet/Delete/' + hizmetId,
                type: 'POST',
                data: { id: hizmetId },
                success: function () {
                    
                    location.reload();
                },
                error: function () {
                    console.log('AJAX isteği başarısız oldu.');
                }
            });
        }
    </script>
}
