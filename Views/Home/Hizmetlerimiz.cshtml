@model IEnumerable<WebSiteAdminPanel.Models.Hizmet>
@{
    ViewBag.Title = "Hizmetlerimiz";
    Layout = "~/Views/Shared/_SiteLayout.cshtml";
}
<main id="main">
    <div class="container">
        <section class="breadcrumbs">
            <div class="container">
                <div class="d-flex justify-content-between align-items-center">
                    <h2>Hizmetlerimiz</h2>
                    <ol>
                        <li><a href="Index">Ana Sayfa</a></li>
                        <li>Hizmetlerimiz</li>
                    </ol>
                </div>
            </div>
        </section>

        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-6 mb-4 d-flex align-items-center" data-aos="fade-up">
                    <div class="card">
                        <div class="card-img">
                            <img src="@item.ResimUrl" width="350" height="200">
                        </div>
                        <div class="card-body">
                            <h5 class="card-title"><a href="#"></a>@item.Baslik</h5>
                            <p class="card-text">@item.Aciklama</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</main>
