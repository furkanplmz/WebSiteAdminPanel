@{
    Layout = "~/Views/Shared/_SiteLayout.cshtml";
    ViewBag.Title = "Index";
}

@{ Html.RenderAction("SliderPartial", "Home");}
<main id="main">

    <section class="features">
      
        <div class="section-title">
            <h2>Hizmetler</h2>
            <p>Crypto Haber Sitemizin paragraf kısmıdır.</p>
        </div>

        @foreach (var item in ViewBag.Hizmetler)
        {
            <div class="row" data-aos="fade-up">
                <div class="col-md-5">
                    <img src="@item.ResimUrl" width="400"height="300" class="img-fluid" alt="">
                </div>
                <div class="col-md-7 pt-4">
                    <h3>@item.Baslik</h3>
                    <p class="fst-italic">
                        @item.Aciklama
                    </p>
                </div>
            </div>
        }
    </section>

</main>



