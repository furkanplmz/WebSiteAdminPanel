@model IEnumerable<WebSiteAdminPanel.Models.Kategori>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section id="main">
    <p>
        @Html.ActionLink("Kategori Ekle", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.KategoriAd)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Aciklama)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.KategoriAd)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Aciklama)
                </td>
                <td>
                    @Html.ActionLink("Güncelle", "Edit", new { id = item.KategoriId }) |
                    @Html.ActionLink("Sil", "Delete", new { id = item.KategoriId })
                </td>
            </tr>
        }
    </table>
</section>